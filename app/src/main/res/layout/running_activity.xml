<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:visibility="visible"
    android:id="@+id/layoutRun"
    android:layout_gravity="center"
    android:background="@drawable/bg_backgroud"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_directions_run_blue_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

   <TextView
       android:id="@+id/tvTest"
       android:textStyle="bold"
       android:textColor="@color/white"
       android:layout_gravity="center"
       android:textSize="50sp"
       android:text="0"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="50dp"
        android:textStyle="normal"
        android:textColor="#D5FFFFFF"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="bước"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_trending_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kmCount"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="0.00"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#D5FFFFFF"
                android:textSize="16sp"
                android:text="km"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_access_time_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/timeCout"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="00:00:00"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#D5FFFFFF"
                android:textSize="16sp"
                android:text="Thời gian"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_whatshot_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kcalCount"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="0.00"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textColor="#D5FFFFFF"
                android:textSize="16sp"
                android:text="kcal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>